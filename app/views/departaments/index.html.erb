<h3>DEPARTAMENTOS
   <small>Lista de departamentos creados en el sistema.</small>
</h3>
<p id="notice"><%= notice %></p>
<div class="container-fluid">
   <!-- START DATATABLE 1 -->
   <div class="row">
      <div class="col-lg-12">
         <div class="panel panel-default">
            <div class="panel-heading">
               Lista |
               <small>Departamentos</small>
            </div>
            <div class="panel-body">
              <table id="datatable1" class="table table-striped table-hover">
                 <thead>

                    <tr>
                      <th  class="sort-numeric">Name</th>

                      <th colspan="3">Acciones</th>
                 </thead>
                 <tbody>
                   <% @departaments.each do |departament| %>
                     <tr class="gradeX">
                       <td colspan="3"><%= departament.name %></TD>
                       <td colspan="3">
                       <%= link_to 'Mostrar', departament, class:'btn btn-info' %>
                       <%= link_to 'Editar', edit_departament_path(departament), class:'btn btn-green' %>
                       <%= link_to 'Eliminar', departament, class:'btn btn-danger', method: :delete, data: { confirm: 'Â¿ Esta seguro de eliminar ' + departament.name + '?' } %></td>
                     </tr>
                   <% end %>
                 </div>
              </div>
               </table>
                 <%= link_to 'Nuevo Departamento', new_departament_path, class: 'btn btn-primary' %>
             </div>

             </div>
             <!-- END DATATABLE 1 -->


             </div>

             </div>

<h3>EMPRESAS
   <small>Lista de empresas creadas en el sistema.</small>
</h3>
<p id="notice"><%= notice %></p>
<div class="container-fluid">
   <!-- START DATATABLE 1 -->
   <div class="row">
      <div class="col-lg-12">
         <div class="panel panel-default">
            <div class="panel-heading">
               Lista |
               <small>Empresas</small>
            </div>
            <div class="panel-body">
               <table id="datatable1" class="table table-striped table-hover">
                  <thead>

                     <tr>
                       <th  class="sort-numeric">Name</th>

                       <th colspan="3">Acciones</th>
                  </thead>
                  <tbody>
                    <% @companies.each do |company| %>
                      <tr class="gradeX">
                        <td colspan="3"><%= company.name %></TD>
                        <td colspan="3">
                        <%= link_to 'Mostrar', company, class:'btn btn-info' %>
                        <%= link_to 'Editar', edit_company_path(company), class:'btn btn-green' %>
                        <%= link_to 'Eliminar', company, class:'btn btn-danger', method: :delete, data: { confirm: 'Â¿ Esta seguro de eliminar ' + company.name + '?' } %></td>
                      </tr>
                    <% end %>


                  </tbody>
               </table>
            </div>
         </div>
            <%= link_to 'Nueva Empresa', new_company_path, class: 'btn btn-primary' %>
      </div>

   </div>
   <!-- END DATATABLE 1 -->


 </div>

</div>

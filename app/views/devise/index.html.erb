<h3>USUARIOS
   <small>Lista de usuarios creados en el sistema.</small>
</h3>
<p id="notice"><%= notice %></p>
<div class="container-fluid">
   <!-- START DATATABLE 1 -->
   <div class="row">
      <div class="col-lg-12">
         <div class="panel panel-default">
            <div class="panel-heading">
               Lista |
               <small>Usuarios</small>
            </div>
            <div class="panel-body">
               <table id="datatable1" class="table table-striped table-hover">
                  <thead>

                     <tr>
                       <th  class="sort-numeric">Nombres</th>
                       <th  class="sort-numeric">Apellidos</th>
                       <th  class="sort-numeric">Correo electrónico</th>
                       <th colspan="3">Acciones</th>
                  </thead>
                  <tbody>
                    <% @users.each do |user| %>
                      <tr class="gradeX">
                        <td ><%= user.first_name %></TD>
                          <td ><%= user.last_name %></TD>
                            <td ><%= user.email %></TD>
                        <td colspan="3">
                        <%= link_to 'Mostrar', user, class:'btn btn-info' %>
                        <%= link_to 'Editar', edit_user_path(user), class:'btn btn-green' %>
                        <%= link_to 'Eliminar', user , class:'btn btn-danger', method: :delete, data: { confirm: '¿ Esta seguro de eliminar ?' } %></td>
                      </tr>
                    <% end %>


                  </tbody>
               </table>
            </div>
         </div>
            <%= link_to 'Nuevo usuario', new_user_path, class: 'btn btn-primary' %>
      </div>

   </div>
   <!-- END DATATABLE 1 -->


 </div>

</div>

<br>

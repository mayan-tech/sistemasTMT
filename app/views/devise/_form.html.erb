<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>

  <% end %>
  <fieldset>
    <div class="form-group">

        <%= form.label :first_name , class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
        <%= form.text_field :first_name, id: :user_first_name, class: 'form-control '  %>

      </div>

    </div>
  </fieldset>
  <fieldset>
    <div class="form-group">

        <%= form.label :last_name , class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
        <%= form.text_field :last_name, id: :user_last_name, class: 'form-control '  %>

      </div>

    </div>
  </fieldset>
  <fieldset>
    <div class="form-group">
      <%= form.label :email, class: 'col-sm-2 control-label' %>

      <div class="col-sm-10">
           <%= form.email_field :email, autofocus: true, autocomplete: "email" , class: 'form-control ' %>
      </div>
    </div>
  </fieldset>
  <fieldset>
    <div class="form-group">
      <%= form.label :password , class: 'col-sm-2 control-label' %> <i>(leave blank if you don't want to change it)</i><br />
      <div class="col-sm-10">
      <%= form.password_field :password, autocomplete: "off" , class: 'form-control ' %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>


    </div>
    </div>
  </fieldset>
  <div class="actions">
    <%= link_to 'Regresar', users_path, class: 'btn btn-sm btn-default' %>
    <%= form.submit class: 'btn btn-sm btn btn-primary'  %>
  </div>
<% end %>

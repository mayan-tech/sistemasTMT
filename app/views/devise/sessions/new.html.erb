<div class="block-center mt-xl wd-xl">
   <!-- START panel-->
   <div class="panel panel-dark panel-flat">
      <div class="panel-heading text-center">
         <a href="#">
            <img src="<%= image_path('angle/logo.png') %>" alt="Image" class="block-center img-rounded" />
         </a>
      </div>
      <div class="panel-body">
         <p class="text-center pv">ACCESO</p>
         <%= form_for(resource, as: resource_name, class: 'mb-lg', url: session_path(resource_name)) do |f| %>

            <div class="form-group has-feedback">

              <%= f.email_field :email, autofocus: true, class:'form-control', autocomplete: "email" %>
              <span class="fa fa-envelope form-control-feedback text-muted"></span>
            </div>
            <div class="form-group has-feedback">
               <%= f.password_field :password, class:'form-control', autocomplete: "off" %>
              <span class="fa fa-lock form-control-feedback text-muted"></span>
            </div>
            <div class="clearfix">

                 <% if devise_mapping.rememberable? -%>
                    <div class="checkbox c-checkbox pull-left mt0">
                      <label>

                     <%= f.check_box :remember_me %>
                     <span class="fa fa-check"></span><%= f.label :remember_me %></label>
                  </div>
                <% end %>
               </div>
               <div class="pull-right"><a href="/pages/recover" class="text-muted">¿ Olvido contraseña ?</a>
               </div>
            </div>
            <%= f.submit "Ingresar", class:'btn btn-block btn-default mt-lg' %>

         <% end %>
      </div>
   </div>
   <!-- END panel-->
</div>
